{
  "name": "proyectos_electron",
  "version": "1.0.0",
  "description": "primeros pasos en electron",
  "main": "main.js",
  
  "scripts": {
    "start": "electron .",
    "build-mac": "electron-packager . --overwrite --platform=darwin --arch=x64 --prune=true --out=release-builds",
    "build-win": "electron-packager . electron-tutorial-app --overwrite --platform=win32 --arch=ia32 --icon=ico.png --prune=true --out=release-builds ",
    "build-linux": "electron-packager . electron-tutorial-app --overwrite  --platform=linux --arch=x64 --icon=ico.png --prune=true --out=release-builds"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/a52hepof/electron.git"
  },
  "author": "Fernando y Antonio",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/a52hepof/electron/issues"
  },
  "homepage": "https://github.com/a52hepof/electron#readme",
  "dependencies": {
    "electron-reload": "^1.5.0",
    "mysql": "^2.17.1",
    "nodemailer": "^6.3.1",
    "nodemailer-smtp-transport": "^2.7.4",
    "package": "^1.0.1"
  }
}
